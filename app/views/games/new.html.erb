<!-- app/views/games/new.html.erb -->
<h1>Longest Word Game</h1>

<%= form_tag("/score", method: "post", data: { turbo: false }) do %>
  <label for="word">Your Word:</label>
  <%= text_field_tag "word" %>
  <%= submit_tag "Play" %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<% end %>

<!-- Display the grid of letters -->
<div>
  <li> <%= @letters %> </li>
</div>
